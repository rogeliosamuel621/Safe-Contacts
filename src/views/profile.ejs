<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Merienda+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/profile.css">
    <title>Profile</title>
</head>
<body>
    <nav>
        <div class="Logo">
            <h1 style="font-family: 'Merienda One', cursive; color: white; margin-left: 30px;">Safe Contacts</h1>
        </div>
        <div class="Plus" style="display: flex; align-items: center; margin-right: 30px;">
            <a href=""><img src="/img/plus.svg" alt="plus" width="30px" height="30px"></a>
        </div>
    </nav>
    <main>
        <aside class="Profile">
            <div>
                <img src="/img/user.svg" alt="" width="200px" height="200px">
            </div>
            <div>
                <p><%=name%></p>
            </div>
            <div class="edit">
                <a href="">Editar perfil</a>
            </div>
        </aside>
        <section class="Content">
            <div class="Navigate">
                <div class="Cathegories">
                    <a href=""><h2 style="margin: 0;">Profile</h2></a>
                    <a href=""><h2 style="margin: 0;">Contacts</h2></a>
                    <a href=""><h2 style="margin: 0;">Settings</h2></a>
                </div>
            </div>
            <div class="Contacts">
                <%if(data.length > 0) {%>
                    <%for(let i=0; i < data.length; i++) {%>
                        <div class="Card">
                            <div>
                                <a href=""><h3><%=data[i].name%> <%=data[i].lastName%></h3></a>
                                <p><strong>Telefono</strong>: <%=data[i].tel%></p>
                                <p><strong>Email</strong>: <%=data[i].email%></p>
                            </div>
                            <div class="btn">
                                <button id="btn<%=i%>"+ ><img src="/img/menu.svg"  data-btn="btn<%=i%>" alt="" width="100%" height="20px"></button>
                                <div class="Options hide" id="Delete<%=i%>">
                                    <a href="/profile/delete/<%=data[i].id%>"><img src="/img/Delete.svg" alt="" width="20px" height="20px"></a>
                                </div>
                                <div class="Options hide" id="Edit<%=i%>">
                                    <a href="/profile/edit/<%=data[i].id%>"><img src="/img/Edit.svg" width="20px" height="20px" alt=""></a>
                                </div>
                            </div>
                        </div>
                    <%}%>
                <%}%>
            </div>
        </section>
    </main>
    <script src="/js/profile.js"></script>
</body>
</html>